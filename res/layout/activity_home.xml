<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#22d2ff"
    tools:context=".Home">



    <Button
        android:id="@+id/prblm_set_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#28A320"
        android:layout_marginTop="20dp"
        android:text="problems set"/>

    <Button
        android:id="@+id/standings_btnId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prblm_set_btn_id"
        android:background="#28A320"
        android:layout_marginTop="20dp"
        android:text="standings"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/standings_btnId"
        android:background="#28A320"
        android:layout_marginTop="20dp"
        android:text="Resources"/>


</RelativeLayout>